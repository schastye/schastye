                .restaurantGradient
                .restaurantContent
                    h2 СЧАСТЬЕ на Невском
                    p Москва, ул. Рубинштейна 15-17
                    button.buttonOutline.js-showRestoran
                        | ПОДРОБНЕЕ О РЕСТОРАНЕ
                        +svgIcon('iconButtonArrow')
            .restaurant(style="background-image: url(img/moskow-medium.jpg)")
                .restaurantGradient
