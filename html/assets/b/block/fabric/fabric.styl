.fabric
    display block
    position relative
    width 100%
    height 100vh
.fabricVideo
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    object-fit cover
    height 100%
    width 100%
    background-color #000
.fabricVideoCover
    position absolute
    top 0
    width 100%
    height 100%
    background url('../img/fabricCover.jpg') no-repeat
    background-size cover
    background-position center
