.communiteCards
    display block
    size 100%
    box horizontal top space-between
    flex-wrap wrap
.communiteCard
    display block
    position relative
    flex 0 1 auto
    width 50%
    height 50vh
    overflow hidden
    &:hover
        .communiteCardImage
            transform scale(1.2)
        .communiteCardContent
            transform translateY(calc(0% - 20px))
        .communiteCardGradient
            opacity .3
.communiteCardImage
    display block
    position absolute
    size 100%
    transition transform .3s ease
    will-change transform
    background-repeat no-repeat
    background-size cover
    background-position center center

.communiteCardGradient
    display block
    position absolute
    size 100%
    opacity .25
    background-image linear-gradient(to bottom, rgba(0,0,0,0), #000)
    //background-color #000
    transition opacity .3
    will-change opacity

.communiteCardContent
    display block
    position absolute
    bottom 0
    transform translateY(calc(100% - 100px))
    left 50px
    padding-right 150px
    transition transform .3s ease
    will-change transform
    h2
        display block
        position relative
        font-family 'Raleway', sans-serif
        font-size 28px
        line-height 36px
        font-weight 300
        letter-spacing 0.08em
        margin-bottom 30px
        text-transform uppercase
        color #fff
        height 70px
        box horizontal bottom
    p
        font-family 'Raleway', sans-serif
        font-size 16px
        font-weight 400
        line-height 22px
        letter-spacing 0.12em
        color #fff
        margin-bottom 20px
    button
        margin-bottom 20px
