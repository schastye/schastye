.lavkaVideo
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    object-fit cover
    height 100%
    width 100%
    background-color #000
.lavkaVideoCover
    position absolute
    width 100%
    height 100%
    background url('../img/lavkaCover.jpg') no-repeat
    background-size cover
    background-position center

.lavkaButton
    display block
    position absolute
    left center
    bottom 80px
    width 225px
    button
        width 100%
.lavkaItems
    display block
    size 100vw 100vh
    box horizontal middle space-between
    padding 0 100px
    z-index 100
.lavkaItem
    flex 0 1 auto
    position relative

.lavkaItemImage
    img
        height 300px
    &Big
        img
            height 450px
.lavkaItemTitle
    display block
    position absolute
    background-color #fceecd
    size 150px
    border-radius 50%
    left center
    top center
    margin-top -80px
    a
        display block
        position absolute
        border solid 1px #282c30
        background-color #fceecd
        size 140px
        margin-top 5px
        margin-left 5px
        border-radius 50%
        box horizontal middle center
        text-decoration none
        span
            font-family 'BebasNeue'
            font-size 18px
            letter-spacing 0.6px
            text-align center
            text-transform uppercase

            color #282c30
